<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.user.multi-agent-orchestrator.scheduler</string>

  <key>ProgramArguments</key>
  <array>
    <string>__PROJECT_ROOT__/.venv/bin/python</string>
    <string>-m</string>
    <string>orchestrator.scheduler</string>
  </array>

  <key>WorkingDirectory</key>
  <string>__PROJECT_ROOT__</string>

  <key>RunAtLoad</key>
  <true/>

  <key>KeepAlive</key>
  <true/>

  <key>StandardOutPath</key>
  <string>__PROJECT_ROOT__/var/logs/launchd-scheduler.out.log</string>

  <key>StandardErrorPath</key>
  <string>__PROJECT_ROOT__/var/logs/launchd-scheduler.err.log</string>
</dict>
</plist>
